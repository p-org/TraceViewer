<Window x:Class="Microsoft.PSharp.Visualization.VisualizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microsoft.PSharp.Visualization"
        mc:Ignorable="d"
        Title="PSharpTraceViewer">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="MenuItem_Open_Click"/>
                </MenuItem>
                <MenuItem Header="_Trace">
                </MenuItem>
                <MenuItem Header="_Visualize">
                </MenuItem>
            </Menu>
        </DockPanel>
        <Path Stroke="Green" StrokeThickness="3">
            <Path.Data>
                <LineGeometry StartPoint="50,100" EndPoint="500,100" />
            </Path.Data>
        </Path>
        <Path Stroke="Green" StrokeThickness="3">
            <Path.Data>
                <LineGeometry StartPoint="50,200" EndPoint="500,200" />
            </Path.Data>
        </Path>
    </Grid>
</Window>
